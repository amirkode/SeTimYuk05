<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ligtBackground"
    android:orientation="vertical"
    tools:context="app.mb.amir.setimyuk.Candidates">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkBackground"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mau SeTim Nih!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/ligtBackground"/>
    </LinearLayout>
   <EditText
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        android:hint="ketik yang kamu cari!"/>
    <ListView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/daftarkandidat">
    </ListView>
</LinearLayout>
